<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center justify-content-center col-6 offset-3" role="alert">
        <% success.forEach(message => { %>
            <%= message %>
        <% }); %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>


<% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center justify-content-center col-6 offset-3" role="alert">
        <% error.forEach(message => { %>
            <%= message %>
        <% }); %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
