<%- layout('layouts/boilerplate') %>
<style>
    .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: calc(100vh - 70px); /* Adjusted height */
}

.login-box {
    max-width: 400px;
    padding: 40px;
    margin: auto; /* Center the box */
    border: 1px solid black;
    border-radius: 10px;
    background-color: #f9f9f9;
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s ease; 
}

.login-box:hover {
    background-color: #f0f0f0; 
}

.login-box h1 {
    text-align: center;
    margin-bottom: 30px;
}

.form-group {
    margin-bottom: 15px; /* Reduced margin */
}

.input-group-addon {
    background-color: #f1f1f1;
    border: 1px solid #ccc;
}

.input-group-addon i {
    color: #666;
}

.form-control {
    border-radius: 5px;
}

.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    border-radius: 5px;
    transition: background-color 0.3s ease; /* Transition for button hover effect */
}

form:hover {
    background-color: #f0f0f0; /* Hover effect for entire form */
}

form .btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}
body{
    background-image: url("https://png.pngtree.com/thumb_back/fw800/background/20230718/pngtree-contemporary-authentic-3d-renderings-of-web-login-page-templates-image_3904126.jpg");
    background-size: cover; /* Adjust the background size as needed */
    background-repeat: no-repeat;
}

</style>
<body>
<div class="login-container">
    <div class="login-box">
        <h1>Sign Up </h1>
        <form action="/signup" method="POST" class="needs-validation" novalidate>

            <div class="form-group mb-3">
                <label for="username" class="form-label">Username</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fas fa-user"></i></span>
                    <input name="username" id="username" type="text" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fas fa-envelope"></i></span>
                    <input name="email" id="email" type="email" class="form-control" required>
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fas fa-lock"></i></span>
                    <input name="password" id="password" type="password" class="form-control" required>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
        </form>
    </div>
</div>
</body>
