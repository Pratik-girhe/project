<% layout("/layouts/boilerplate") %>


    <body>

        <style>
            body {
                background-color: #f5f5f5;
            }

            .card {

                box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            }

            .card-title {
                color: #007bff;
            }

            .form-control {
                border: 2px solid #ced4da;

            }

            .form-control:focus {

                box-shadow: none;
            }

            .btn-primary {
                background-color: #007bff;
                border: none;
                padding: 12px 24px;
                width: 100%;
                color: #fff;
                font-weight: bold;
                transition: background-color 0.3s;
            }


            .container:hover .card {
                transform: translateY(-5px);
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            }
        </style>

        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-lg p-5">
                        <h3 class="card-title text-center mb-4">Create a New Listing</h3>
                        <form method="POST" action="/listings" novalidate class="needs-validation"
                            enctype="multipart/form-data">

                            <div class="form-floating mb-3">
                                <input name="listing[title]" placeholder="Add a catchy title" type="text"
                                    class="form-control" id="title" pattern="^[^0-9]+$"
                                    title="Please enter only letters" required>
                                <label for="title">Title</label>
                                <div class="invalid-feedback">Please enter a valid title</div>
                            </div>
                            <br/>
                            <div class="form-floating mb-3">
                                <textarea name="listing[description]" class="form-control" id="description"
                                    placeholder="Description" required></textarea>
                                <label for="description">Description</label>
                                <div class="invalid-feedback">Please enter a description</div>
                            </div>

                            <br/>
                            <div class="mb-3">
                                <label for="image" class="form-label">Upload Listing Image</label>
                                <input name="listing[image]" type="file" class="form-control" id="image">
                            </div>

                            <br/>
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <div class="form-floating">
                                        <input name="listing[price]" placeholder="1200" class="form-control" id="price"
                                            required>
                                        <label for="price">Price</label>
                                        <div class="invalid-feedback">Please enter a valid price</div>
                                    </div>
                                </div>

                                <br/>
                                <div class="mb-3 col-md-6">
                                    <div class="form-floating">
                                        <input name="listing[country]" placeholder="India" type="text"
                                            class="form-control" id="country" pattern="^[^0-9]+$"
                                            title="Please enter only letters" required>
                                        <label for="country">Country</label>
                                        <div class="invalid-feedback">Please enter a valid country</div>
                                    </div>
                                </div>
                            </div>

                            <br/>
                            <div class="form-floating mb-3">
                                <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text"
                                    class="form-control" id="location" pattern="^[^0-9]+$"
                                    title="Please enter only letters" required>
                                <label for="location">Location</label>
                                <div class="invalid-feedback">Please enter a valid location</div>
                            </div>

                            <br/>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>